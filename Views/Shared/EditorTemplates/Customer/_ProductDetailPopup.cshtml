@using Corno.Web.Globals
@using Kendo.Mvc.UI
@model Corno.Web.Areas.Masters.ViewModels.Customer.CustomerProductDetailViewModel

@Html.HiddenFor(model => model.Id)

<div class="form-group">
    @Html.LabelFor(m => m.ProductId, "Product", new { @class = "col-sm-4" })
    <div class="col-sm-10">
        @(Html.Kendo().MultiColumnComboBoxFor(m => m.ProductId)
            .DataTextField(FieldConstants.Name)
            .DataValueField(FieldConstants.Id)
            .HtmlAttributes(new { @class = "w-100" })
            .Filter("contains")
            .FilterFields(new string[] { FieldConstants.Code, FieldConstants.Name })
            .Placeholder("Product Select ...")
            .Suggest(true)
            .Columns(columns =>
            {
                columns.Add().Field(FieldConstants.Code).Title(FieldConstants.Code).Width("250px");
                columns.Add().Field(FieldConstants.Name).Title(FieldConstants.Name).Width("300px");
            })
            //.BindTo(miscMaster.GetViewModelList(m => m.MiscType == MiscMasterConstants.Unit))
            .DataSource(source =>
            {
                source.Read(read => read.Action("GetProducts", "Data", new { area = "" }))
                    .ServerFiltering(false);
            }))
    </div>
</div>
<br/>
<div class="form-group">
    @Html.LabelFor(m => m.MachineId, "Machine", new { @class = "col-sm-4" })
    <div class="col-sm-10">
        @(Html.Kendo().MultiColumnComboBoxFor(m => m.MachineId)
            .DataTextField(FieldConstants.Name)
            .DataValueField(FieldConstants.Id)
            .HtmlAttributes(new { @class = "w-100" })
            .Filter("contains")
            .Placeholder("Machine Select ...")
            .Suggest(true)
            .Columns(columns =>
            {
                columns.Add().Field(FieldConstants.Code).Title(FieldConstants.Code).Width("250px");
                columns.Add().Field(FieldConstants.Name).Title(FieldConstants.Name).Width("300px");
            })
            //.BindTo(miscMaster.GetViewModelList(m => m.MiscType == MiscMasterConstants.Unit))
            .DataSource(source =>
            {
                source.Read(read => read.Action("GetMiscMasters", "Data", new { area = "", miscType = MiscMasterConstants.Machine }))
                    .ServerFiltering(false);
            }))
    </div>
</div>
<div class="form-group">
    <div class="col-sm-10">
        @(Html.Kendo().TextBoxFor(m => m.PrinterName)
            .Label(c => c.Content("Printer Name").Floating(true))
            .HtmlAttributes(new
            {
                @class = "w-100"
            }))
    </div>
</div>


