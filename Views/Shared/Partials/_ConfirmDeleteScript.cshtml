<script type="text/javascript">
    function confirmDelete() {
        bootbox.confirm({
            title: 'Confirm',
            message: 'Are you sure you want to delete?',
            buttons: {
                'cancel': {
                    label: 'Cancel',
                    className: 'btn-default pull-left'
                },
                'confirm': {
                    label: 'Delete',
                    className: 'btn-danger pull-right'
                }
            },
            callback: function (result) {
                if (true === result) {
                    $('#form').submit();
                }
            }
        });
    }
</script>

