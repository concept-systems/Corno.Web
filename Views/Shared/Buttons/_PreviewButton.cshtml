@using Corno.Web.Helper
@using Kendo.Mvc.UI
@{
    string buttonName = ViewBag.ButtonName ?? "preview";
    string buttonText = ViewBag.ButtonText ?? "Preview";
    string clickFunction = ViewBag.ClickFunction ?? "onPreview";
    ButtonType buttonType = ViewBag.ButtonType ?? ButtonType.Info;
    string icon = ViewBag.Icon ?? "preview";
}

@(Html.Kendo().Button()
    .Name(buttonName)
    .Content(buttonText)
    .ApplyStandardSettingsWithType(buttonType, icon, ComponentSize.Medium)
    .Events(e => e.Click(clickFunction)))

