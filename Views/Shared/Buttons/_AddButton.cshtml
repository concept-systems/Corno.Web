@using Corno.Web.Helper
@using Kendo.Mvc.UI
@{
    string createAction = ViewBag.CreateAction ?? "Create";
    string controller = ViewBag.Controller;
    string area = ViewBag.Area;
    object miscType = ViewBag.MiscType;
    string buttonName = ViewBag.ButtonName ?? "btnAdd";
    string buttonText = ViewBag.ButtonText ?? "Add";
    string addUrl = Url.Action(createAction, controller, new { area = area, miscType = miscType });
}

@(Html.Kendo().Button()
    .Name(buttonName)
    .Content(buttonText)
    .ApplyStandardSettingsWithType(ButtonType.Primary, "plus", ComponentSize.Medium)
    .HtmlAttributes(new { onclick = $"window.location.href='{addUrl}'; return false;" }))

