@model Corno.Web.Models.LoginViewModel
@using Kendo.Mvc.UI
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="@Url.Content("~/Content/kendo/2023.1.117/kendo.default-turquoise.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/kendo/2023.1.117/jquery.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2023.1.117/jszip.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2023.1.117/kendo.all.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo/2023.1.117/kendo.aspnetmvc.min.js")"></script>
    <script src="@Url.Content("~/Scripts/kendo.modernizr.custom.js")"></script>

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background: #f5f7fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .login-wrapper {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
            box-sizing: border-box;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .login-header img {
            max-width: 100px;
            margin-bottom: 1rem;
        }

        .login-header h2 {
            margin: 0;
            font-weight: 600;
            font-size: 1.5rem;
        }

        .k-form .k-button {
            width: 100%;
        }

        .text-danger,
        .validation-summary-errors,
        .validation-summary-errors ul,
        .validation-summary-errors li {
            color: #d32f2f !important;
            font-weight: 500;
        }

        .validation-summary-errors {
            background-color: #ffebee;
            border: 1px solid #d32f2f;
            border-radius: 4px;
            padding: 12px;
            margin-bottom: 1rem;
        }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }

        @*@media (max-width: 480px) {
            .login-wrapper {
                padding: 1rem;
            }

            .login-header h2 {
                font-size: 1.2rem;
            }
        }*@
    </style>
</head>
<body>
    <div class="login-wrapper">
        <div class="login-header">
            <img src="@Url.Content("~/Content/assets/logo_512.png")" alt="Logo" />
            <h2>Sign In</h2>
        </div>

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        @(Html.Kendo().Form<Corno.Web.Models.LoginViewModel>()
            .Name("LoginForm")
            .HtmlAttributes(new { method = "POST" })
            .Validatable(v => v.ValidateOnBlur(true))
            .Items(items =>
            {
                items.Add()
                    .Field(f => f.UserName)
                    .Label(l => l.Text("Username:"));
                items.Add()
                    .Field(f => f.Password)
                    .Label(l => l.Text("Password:"))
                    .InputHtmlAttributes(new { type = "password", autocomplete = "off" });
            })
            .ButtonsTemplate("<button type='submit' class='k-button k-button-md k-button-outline k-button-outline-primary k-rounded-full' style='width: 100%;'><span class='k-icon k-i-login'></span><span class='k-button-text'>Login</span></button>")
        )
    </div>
</body>
</html>



