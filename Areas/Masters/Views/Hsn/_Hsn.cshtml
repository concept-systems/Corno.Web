@using Corno.Globals.Constants
@using Corno.Services.Helpers
@using Corno.Services.Windsor
@using Kendo.Mvc.UI
@model Corno.Concept.Modules.Masters.Models.Hsn

@{
    ViewBag.Index = "Index";
    ViewBag.Create = "Create";
    ViewBag.Edit = "Edit";
    ViewBag.Details = "Details";
    ViewBag.Delete = "Delete";
}

@{
    Page.Title = "Hsn";
    ViewBag.MainMenu = "Masters";
    ViewBag.CurrentSitemap = "Hsn";
    ViewBag.BoxTitle = "Create New Hsn";
    ViewBag.Controller = "Hsn";
    ViewBag.SubmitAction = ViewBag.Create;
}

@{
    var cityService = Bootstrapper.Get<ICityService>();
    var stateService = Bootstrapper.Get<IStateService>();
}

@Html.HiddenFor(m => m.Id)

<!-- Toggle button visible on mobile to open the responsive panel -->
<button id="hsnPanelToggle" class="k-button k-button-md k-rounded-md k-button-solid k-button-solid-primary rp-toggle" type="button">
    <span class="k-icon k-i-menu"></span>
    Show Details
</button>

@(Html.Kendo().ResponsivePanel()
    .Name("hsnPanel")
    .Orientation(ResponsivePanelOrientation.Top)
    .Breakpoint(100)
    .ToggleButton("#hsnPanelToggle")
    .HtmlAttributes(new { style = "margin-bottom: 20px;" })
    .Content(@<text>
        <div class="responsive-panel-container">
            <div class="k-widget k-panel mb-4">
                <h3 class="k-panel-title">Basic Information</h3>
                <div class="k-panel-content">
                    @Html.Partial("Partials/_MasterEdit", Model)
                </div>
            </div>

            <div class="k-widget k-panel mb-4">
                <h3 class="k-panel-title">Tax Details</h3>
                <div class="k-panel-content">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Cgst, "CGST (*) :",
                                    new { @class = "col-4" })
                                <div class="col-8">
                                    @(Html.Kendo().TextBoxFor(m => m.Cgst)
                                        .HtmlAttributes(new
                                        {
                                            @class = "w-100"
                                        }))
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Sgst, "SGST (*) :",
                                    new { @class = "col-4" })
                                <div class="col-8">
                                    @(Html.Kendo().TextBoxFor(m => m.Sgst)
                                        .HtmlAttributes(new
                                        {
                                            @class = "w-100"
                                        }))
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Igst, "IGST (*) :",
                                    new { @class = "col-4" })
                                <div class="col-8">
                                    @(Html.Kendo().TextBoxFor(m => m.Igst)
                                        .HtmlAttributes(new
                                        {
                                            @class = "w-100"
                                        }))
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </text>
    )
)
