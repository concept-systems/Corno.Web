@model Corno.Web.Areas.Masters.Dtos.Location.LocationDto
@using Kendo.Mvc.UI

<div class="row">
    @(Html.Kendo().Grid(Model.LocationStockDetails)
        .Name("gridStock")
        .Columns(columns =>
        {
            columns.Bound(p => p.Id)
                .ClientTemplate("<input type='hidden' name='LocationStockDetails[#= index(data, 'gridStock')#].Id' value='#= Id #' />")
                .Hidden();
            columns.Bound(p => p.ItemId)
                .ClientTemplate("#= ItemName  #" +
                                "<input type='hidden' name='LocationStockDetails[#= index(data, 'gridStock')#].ItemId' value='#= ItemId #' />").Width(180);
            /*.EditorViewData(new { DataSource = customerService.GetViewModelList() })
            .EditorTemplateName(@"/Corno/MultiColumnComboBoxInt").Width(180);*/
            columns.Bound(p => p.Quantity).Title("Quantity")
                .ClientTemplate("#= Quantity #" +
                                "<input type='hidden' name='LocationStockDetails[#= index(data, 'gridStock')#].Quantity' value='#= Quantity #'   />")
                //.EditorTemplateName("Number")
                .Width(50);

            columns.Command(command =>
            {
                command.Edit();
                command.Destroy();
            }).Width(100);
        })
        .ToolBar(toolbar => toolbar.Create())
        .Editable(editable => editable.Mode(GridEditMode.PopUp)
            .TemplateName("/Location/_StockPopup"))
        .Sortable()
        .Filterable(f => f.Mode(GridFilterMode.Row))
        .Pageable()
        .Scrollable()
        //.Events(events => events.Edit("onEdit"))
        .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(20)
            .Events(events => events.Error("error_handler")
            /*.Change("onChange")*/)
            .Model(model =>
            {
                model.Id(p => p.Id);
                model.Field(p => p.Quantity).DefaultValue(0);
            })
            .ServerOperation(false)
            .Create(update => update.Action("Inline_Create_Stock", "Location"))
            .Update(update => update.Action("Inline_Create_Stock", "Location"))
            .Destroy(update => update.Action("Inline_Create_Stock", "Location"))
        )
        .Resizable(resize => resize.Columns(true))
        .Reorderable(reorder => reorder.Columns(true))
        )
</div>