@using Corno.Web.Services.Masters.Interfaces
@using Corno.Web.Windsor
@using Kendo.Mvc.UI
@model Corno.Web.Areas.Masters.ViewModels.Customer.CustomerViewModel

@{
    ViewBag.Index = "Index";
    ViewBag.Create = "Create";
    ViewBag.Edit = "Edit";
    ViewBag.Details = "Details";
    ViewBag.Delete = "Delete";

    Page.Title = "Customer";
    ViewBag.MainMenu = "Masters";
    ViewBag.CurrentSitemap = "Customer";
    ViewBag.BoxTitle = "Create New Customer";
    ViewBag.Controller = "Customer";
    var productService = Bootstrapper.Get<IProductService>();

}

@Html.HiddenFor(m => m.Id)

<!-- Toggle button visible on mobile to open the responsive panel -->
<button id="customerPanelToggle" class="k-button k-button-md k-rounded-md k-button-solid k-button-solid-primary rp-toggle" type="button">
    <span class="k-icon k-i-menu"></span>
    Show Details
</button>

@(Html.Kendo().ResponsivePanel()
    .Name("customerPanel")
    .Orientation(ResponsivePanelOrientation.Top)
    .Breakpoint(100)
    .ToggleButton("#customerPanelToggle")
    .HtmlAttributes(new { style = "margin-bottom: 20px;" })
    .Content(@<text>
        <div class="responsive-panel-container">
            <div class="k-widget k-panel mb-4">
                <h3 class="k-panel-title">Basic Information</h3>
                <div class="k-panel-content">
                    @Html.Partial("Partials/_MasterEdit", Model)
                </div>
            </div>

            <div class="k-widget k-panel mb-4">
                <h3 class="k-panel-title">Details</h3>
                <div class="k-panel-content">
                    <div class="col-sm-12">
                        @(Html.Kendo().TabStrip()
                            .Name("tabstrip")
                            .Items(tabstrip =>
                            {
                                tabstrip.Add().Text("General")
                                    .Content(Html.Partial("~/Areas/Masters/Views/Customer/_GeneralTab.cshtml", Model).ToHtmlString());

                                tabstrip.Add().Text("Contact Info")
                                    .Content(Html.Partial("~/Areas/Masters/Views/Customer/_ContactInfoTab.cshtml", Model).ToHtmlString());

                                tabstrip.Add().Text("Product Details")
                                    .Content(Html.Partial("~/Areas/Masters/Views/Customer/_ProductDetailsTab.cshtml", Model).ToHtmlString());
                            })
                            .SelectedIndex(0)
                        )
                    </div>
                </div>
            </div>
        </div>
    </text>
    )
)
