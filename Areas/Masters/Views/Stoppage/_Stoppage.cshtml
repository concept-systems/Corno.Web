@using Corno.Globals.Constants
@using Corno.Services.Helpers
@using Corno.Services.Windsor
@using Kendo.Mvc.UI
@model Corno.Concept.Modules.Masters.Models.Supplier

@{
    ViewBag.Index = "Index";
    ViewBag.Create = "Create";
    ViewBag.Edit = "Edit";
    ViewBag.Details = "Details";
    ViewBag.Delete = "Delete";
}

@{
    Page.Title = "Stoppage";
    ViewBag.MainMenu = "Masters";
    ViewBag.CurrentSitemap = "Stoppage";
    ViewBag.BoxTitle = "Create New Stoppage";
    ViewBag.Controller = "Stoppage";
    ViewBag.SubmitAction = ViewBag.Create;
}

@{
    var cityService = Bootstrapper.Get< ICityService>();
    var stateService = Bootstrapper.Get< IStateService>();
}

@Html.HiddenFor(m => m.Id)

<div class="k-card">
    <div class="k-card-header">
        @Html.Partial("Partials/_MasterEdit", Model)
    </div>
    <div class="k-card-separator"></div>
    <div class="k-card-body">
        <div class="row">
            <div class="col-sm-12">
                <nav>
                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                        <a class="nav-item nav-link active" id="nav-general-tab" data-toggle="tab" href="#nav-general" role="tab" aria-controls="nav-general" aria-selected="true">General</a>
                        <a class="nav-item nav-link" id="nav-cost-tab" data-toggle="tab" href="#nav-cost" role="tab" aria-controls="nav-cost" aria-selected="false">Contact Info</a>
                    </div>
                </nav>
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-general" role="tabpanel" aria-labelledby="nav-general-tab">
                        <br />
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.EditorFor(m => m.GSTIN, new { Name = nameof(Model.GSTIN) })
                            </div>
                            <div class="col-sm-6">
                                @Html.EditorFor(m => m.CreditLimit, new { Name = nameof(Model.CreditLimit) })
                                @Html.EditorFor(m => m.CreditDays, new { Name = nameof(Model.CreditDays) })
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-cost" role="tabpanel" aria-labelledby="nav-cost-tab">
                        <br />
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="input-group pb-1">
                                    @(Html.Kendo().TextAreaFor(m => m.Address)
                                          .Rows(3)
                                          .Label(label => label
                                              .Content(nameof(Model.Address))
                                              .Floating(true))
                                          .HtmlAttributes(new
                                          {
                                              placeholder = $"Enter {nameof(Model.Address)}",
                                              @class = "required w-100"
                                          }))
                                </div>
                                @Html.EditorFor(m => m.CityId, @"Corno/MultiColumnComboBoxInt",
                                    new
                                    {
                                        DataSource = cityService.GetViewModelList(),
                                        Name = "City :"
                                    })
                                @Html.EditorFor(m => m.StateId, @"Corno/MultiColumnComboBoxInt",
                                    new
                                    {
                                        DataSource = stateService.GetViewModelList(),
                                        Name = "State :"
                                    })
                                @Html.EditorFor(m => m.ContactPerson, new { Name = nameof(Model.ContactPerson) })
                            </div>
                            <div class="col-sm-6">
                                @Html.EditorFor(m => m.Phone, new { Name = nameof(Model.Phone) })
                                @Html.EditorFor(m => m.Mobile, new { Name = nameof(Model.Mobile) })
                                @Html.EditorFor(m => m.Fax, new { Name = nameof(Model.Fax) })
                                @Html.EditorFor(m => m.Email, new { Name = nameof(Model.Email) })
                                @Html.EditorFor(m => m.Website, new { Name = nameof(Model.Website) })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


