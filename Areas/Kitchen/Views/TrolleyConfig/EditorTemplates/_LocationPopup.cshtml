@using Corno.Web.Globals
@using Kendo.Mvc.UI
@model Corno.Web.Areas.Kitchen.Dto.Put_To_Light.TrolleyConfigDetailDto

@Html.HiddenFor(model => model.Id)

<div class="form-group">
    @Html.LabelFor(m => m.LocationId, "Location", new { @class = "col-sm-4" })
    <div class="col-sm-10">
        @(Html.Kendo().MultiColumnComboBoxFor(m => m.LocationId)
            .DataTextField(FieldConstants.Name)
            .DataValueField(FieldConstants.Id)
            .HtmlAttributes(new { @class = "w-100" })
            .Filter("contains")
            .Placeholder("Select ...")
            .Suggest(true)
            .Columns(columns =>
            {
                columns.Add().Field(FieldConstants.Code).Title(FieldConstants.Code);
                columns.Add().Field(FieldConstants.Name).Title(FieldConstants.Name);
            })
            .DataSource(source =>
            {
                source.Read(read => { read.Action("GetMiscMasters", "Data", new { area = "", miscType = MiscMasterConstants.Location }); })
                    .ServerFiltering(false);
            }))
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.ColorId, "Shade", new { @class = "col-sm-4" })
    <div class="col-sm-10">
        @(Html.Kendo().MultiColumnComboBoxFor(m => m.ColorId)
            .DataTextField(FieldConstants.Name)
            .DataValueField(FieldConstants.Id)
            .HtmlAttributes(new { @class = "w-100" })
            .Filter("contains")
            .Placeholder("Select ...")
            .Suggest(true)
            .Columns(columns =>
            {
                columns.Add().Field(FieldConstants.Code).Title(FieldConstants.Code);
                columns.Add().Field(FieldConstants.Name).Title(FieldConstants.Name);
            })
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetColors", "TrolleyConfig"/*, new { area = "", miscType = MiscMasterConstants.Color }*/)
                        .Data("filterColor");
                })
                    .ServerFiltering(false);
            })
            .AutoBind(false))
    </div>
</div>

