@using Corno.Web.Globals
@using Kendo.Mvc.UI
@model Corno.Web.Areas.Kitchen.Dto.Label.PartLabelCrudDto

@{
    Layout = "~/Views/Shared/_LayoutBase.cshtml";
    
    // Override only PartLabel-specific settings
    ViewBag.Controller = "PartLabel";
    ViewBag.GetItemsAction = "GetItems";
    ViewBag.PrintAction = "Print";
    ViewBag.PreviewAction = "Preview";
    ViewBag.PrintPath = "/PartLabel/Print";
    ViewBag.PreviewPath = "/PartLabel/Preview";
}

@section sectionBaseFooter
{
    <div class="k-actions k-actions-horizontal k-actions-end">
        @Html.Partial("Buttons/_BackButton")
        @Html.Partial("Buttons/_PreviewButton")
        @Html.Partial("Buttons/_PrintButton")
    </div>
}

@Html.Partial("~/Areas/Kitchen/Views/Shared/_PartLabel.cshtml", Model)